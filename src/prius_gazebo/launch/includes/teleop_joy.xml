<?xml version="1.0"?>

<launch>

    <arg name="joy_maxVel" />
    <arg name="joy_accele" />
    <arg name="cmd_ns" />

<!-- key teleop -->
<!--============-->
    <node pkg="prius_control" type="solabot_teleop_joy_gear.py" name="teleop_joy">
        <remap from="/car/cmd_vel" to="/$(arg cmd_ns)/cmd_vel"/>
        <param name="max_velocity" value="$(arg joy_maxVel)" />
        <param name="acceleration" value="$(arg joy_accele)" />
    </node>

    <node pkg="joy" type="joy_node" name="joystick" >
	    <param name="deadzone" value="0.0" />
	    <param name="autorepeat_rate" value="100" />
    </node>
</launch>
